<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/logo1" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewErrorGoal"
            android:layout_width="59dp"
            android:layout_height="34dp"
            app:srcCompat="@drawable/logo4" />

        <TextView
            android:id="@+id/textViewErrorMessageGoal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            android:text="Error!" />
    </TableRow>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/textViewTargetWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:text="@string/target_weight" />

            <EditText
                android:id="@+id/editTextTargetWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5"
                android:inputType="numberSigned" />

            <TextView
                android:id="@+id/textViewTargetMesurment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kg" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/textViewiWantTo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:paddingTop="2dp"
                android:text="@string/i_want_to" />

            <TableRow
                android:layout_width="175dp"
                android:layout_height="match_parent">

                <Spinner
                    android:id="@+id/spinneriWantTo"
                    android:layout_width="164dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/i_want_to_array" />
            </TableRow>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/textViewWeeklyGoal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:paddingTop="1dp"
                android:text="@string/weekly_goal" />

            <TableRow
                android:layout_width="225dp"
                android:layout_height="match_parent">

                <Spinner
                    android:id="@+id/spinnerWeeklyGoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/weekly_goal_array"
                    android:paddingLeft="3dp" />

                <TextView
                    android:id="@+id/textViewWeeklyGoal2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/kg_each_week" />
            </TableRow>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/textView14"
                android:layout_width="106dp"
                android:layout_height="match_parent"
                android:text="@string/blank" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/buttonSignUpGoal"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:text="Lets Go!" />
            </TableRow>

        </TableRow>
    </TableLayout>


</LinearLayout>
